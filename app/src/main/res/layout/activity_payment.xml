<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingStation.Payment"
    android:background="#9F34D2">


    <TextView
        android:id="@+id/paymenttext"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="#9F34D2"
        android:padding="20sp"
        android:text="Payment Method"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/paymenttext"
        android:background="@drawable/payment"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textStyle="bold"
            android:textSize="20sp"
          />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/companyname"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking Slot Id"
            android:textStyle="bold"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parking Slot Id"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/slot"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Amount"
            android:textStyle="bold"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Payment Amount"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/amount"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangular_button"
            android:padding="20dp"
            android:text="Pay"
            android:textColor="#fff"
            android:textSize="20sp"
            android:id="@+id/pay"/>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymenttext"
        android:layout_alignStart="@id/paymenttext"
        android:layout_alignEnd="@id/paymenttext"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-74dp"
        android:layout_marginEnd="-6dp"
        android:src="@drawable/card" />

</RelativeLayout>